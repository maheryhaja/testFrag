<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background">

    <LinearLayout
        android:id="@+id/layout_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/login_margin_top"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

    </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_text_boutton"
            android:layout_marginBottom="@dimen/margin_text_boutton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demande_metier"
            android:textSize="@dimen/textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/largeur_button_art_comm"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/largeur_button_art_comm"
                android:layout_height="match_parent"
                android:id="@+id/artisan"
                android:background="@drawable/bt_arrondi_jaune">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanc"
                    android:text="@string/artisan"
                    android:textSize="@dimen/textSize"
                    android:layout_centerHorizontal="true"
                    android:background="@color/color_primary_dark"/>
                <ImageView
                    android:id="@+id/img1"
                    android:layout_below="@id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_oui"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/color_primary_dark"/>

            </RelativeLayout>

            <RelativeLayout android:layout_width="@dimen/largeur_button_art_comm"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/espacement_boutton_oui_non"
                android:id="@+id/commercant"
                android:background="@drawable/bt_arrondi_gris">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanc"
                    android:text="@string/commercant"
                    android:textSize="@dimen/textSize"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_below="@id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_non"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
