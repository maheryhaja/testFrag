<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/window_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_button_answer">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/window_background">

                <LinearLayout
                    android:id="@+id/l0"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/gris_claire"/>
                        <TextView
                            android:id="@+id/text_type"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/textSize"
                            android:textColor="@color/blanc"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nature"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/gris_claire"/>
                        <TextView
                            android:id="@+id/text_nature"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/blanc"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/gris"/>
                        <TextView
                            android:id="@+id/text_detail"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/blanc"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/etablissment"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/gris_claire"/>
                        <TextView
                            android:id="@+id/text_nom_etablissement_artisan"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/blanc"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_adresse_etablissement"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/textSize"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chef_etablissement"
                        android:textSize="@dimen/textSize"
                        android:textColor="@color/gris_claire"/>
                    <TextView
                        android:id="@+id/text_nom_chef_etablissement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize"
                        />
                    <TextView
                        android:id="@+id/text_tel_chef_etablissement"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/textSize"
                        android:layout_height="wrap_content"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/commentaire"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/gris_claire"/>
                        <TextView
                            android:id="@+id/text_commentaire"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/textSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blanc"/>

                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize"
                        android:text="PHOTO"
                        android:textColor="@color/gris_claire"/>

                </LinearLayout>
                <android.support.v4.view.ViewPager
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/l0"
                    android:id="@+id/view_pager_photo"
                    android:layout_width="@dimen/view_pager_photo_height"
                    android:layout_height="@dimen/view_pager_photo_height"
                    android:layout_marginTop="@dimen/prisephoto_viewpager_espacement"
                    android:layout_gravity="center_horizontal"
                    >
                </android.support.v4.view.ViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_marginTop="@dimen/indicator_viewpager_photo_espacement"
                    android:layout_below="@id/view_pager_photo"
                    android:layout_width="match_parent"
                    app:ci_height="@dimen/indicator_photo_height_width"
                    app:ci_width="@dimen/indicator_photo_height_width"
                    android:layout_centerHorizontal="true"
                    app:ci_drawable="@drawable/circle_jaune_indicator"
                    app:ci_drawable_unselected="@drawable/circle_jaune_indicator"
                    android:layout_height="@dimen/indicator_height"/>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_button_answer"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/button_non"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refuse"
            android:textColor="@color/blanc"
            android:background="@drawable/bt_arrondi_jaune"/>
        <Button
            android:id="@+id/button_oui"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accepte"
            android:textColor="@color/blanc"
            android:background="@drawable/bt_arrondi_gris"/>
    </LinearLayout>

</RelativeLayout>

