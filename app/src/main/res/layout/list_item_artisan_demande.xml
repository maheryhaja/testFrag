<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="@color/window_background"
    >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:id="@+id/r1"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_demande"
                   android:layout_alignParentLeft="true"
                   android:text="Demande du 03/17"
                   android:textSize="@dimen/size_text_demande_artisan"
                   android:layout_centerVertical="true"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_facturer"
                   android:layout_toRightOf="@id/text_demande"
                   android:text="@string/facturer_list"
                   android:textSize="@dimen/size_text_demande_artisan"
                   android:layout_marginLeft="@dimen/marginLeft_facturer"
                   android:visibility="gone"
                   android:layout_centerVertical="true"
                   />
               <ImageView
                   android:id="@+id/image_view_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:src="@drawable/circle_jaune"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_status"
                   android:layout_toLeftOf="@id/image_view_status"
                   android:text="En cours"
                   android:textSize="@dimen/size_text_demande_artisan"
                   android:layout_marginRight="10dp"
                   android:layout_centerVertical="true"
                   />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gris"/>

       </RelativeLayout>

</RelativeLayout>
