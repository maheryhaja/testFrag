<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/noir"
    android:orientation="vertical"
   >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
         >
        <View
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_view"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/color_primary_dark"/>
        <TextView
            android:layout_toRightOf="@id/img_view"
            android:id="@+id/nom_materiel"
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/width_materiel_name"
            android:layout_height="wrap_content"
            android:textColor="@color/blanc"
            android:layout_centerVertical="true"
            android:text="materiel leiretam materiel"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/prix_materiel"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanc"
            android:text="ffghfghf"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gris"/>
</LinearLayout>
