<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/window_background"
    android:orientation="vertical"
    android:gravity="center">

    <!-- email field  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/color_primary_dark"/>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gris"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/picto_mail"/>
        </RelativeLayout>
       <EditText
            android:textSize="@dimen/text_size"
            android:id="@+id/edit_text_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            android:hint="@string/mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/blanc"
            android:imeOptions="actionDone"
            android:textColorHint="@color/blanc"
           />
    </LinearLayout>


    <!-- or field  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/or_margin"
        android:layout_marginRight="@dimen/or_margin"
        android:layout_marginTop="@dimen/or_margin_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="40"
            android:background="@color/blanc" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/or"
            android:textSize="@dimen/text_size"
           />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="40"
            android:background="@color/blanc" />
    </LinearLayout>


    <!-- telephon field  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/or_margin_layout">
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/color_primary_dark"/>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gris"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/picto_phone"/>
        </RelativeLayout>

       <EditText
           android:maxLength="20"
            android:textSize="@dimen/text_size"
            android:id="@+id/edit_text_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            android:hint="@string/tel"
            android:inputType="number|phone"
            android:imeOptions="actionDone"
            android:textColor="@color/blanc"
            android:textColorHint="@color/blanc"
           />
    </LinearLayout>

    <!-- or field  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/or_margin"
        android:layout_marginRight="@dimen/or_margin"
        android:layout_marginTop="@dimen/or_margin_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="40"
            android:background="@color/blanc" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/or"
            android:textSize="@dimen/text_size"
           />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="40"
            android:background="@color/blanc" />
    </LinearLayout>

    <!-- telephon field  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/or_margin_layout">
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/color_primary_dark"/>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gris"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/picto_home"/>
        </RelativeLayout>

       <EditText
            android:textSize="@dimen/text_size"
            android:id="@+id/edit_text_nom_etabli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris"
            android:hint="@string/etablissment_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/blanc"
            android:textColorHint="@color/blanc"
            />
    </LinearLayout>

    <Button
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/login_margin"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:id="@+id/button_connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/envoyer"
        android:textColor="@color/blanc"
        android:background="@drawable/background_card_yellow"/>
</LinearLayout>

