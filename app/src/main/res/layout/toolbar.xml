<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/tool_bar_color"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/main_toolbar_button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/button_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bt_menu" />

        </RelativeLayout>


        <fr.hdb.artibip.presentation.widget.typeface.TypefaceTextView
            android:id="@+id/text_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/main_toolbar_button_main_menu"
            android:textColor="@color/blanc"
            android:textSize="@dimen/textSize"
           app:customTypeface="@string/lato_regular"/>

        <ImageView
            android:id="@+id/image_toolbar_logo_header"
            android:layout_width="@dimen/width_logo_toolbar"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_bottom_logo_toolbar"
            android:layout_marginRight="@dimen/margin_right_logo"
            android:src="@drawable/logo"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_dark"></View>
    </RelativeLayout>

</LinearLayout>


